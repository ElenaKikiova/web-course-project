@model CourseProject.ViewModels.Ratings.RatingCreateEditViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rate shoe</title>
</head>
<body>

    <h4>Give rating</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Rate">
                <input hidden asp-for="ShoeId" class="form-control" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                    <input type="radio" asp-for="RateString" class="rate" value="1" name="RateString" id="1" hidden/>
                    <label for="1">
                        1 star <img src="https://upload.wikimedia.org/wikipedia/commons/d/dd/Star_rating_1_of_5.png" />
                    </label>
                    <input type="radio" asp-for="RateString" class="rate" value="2" name="RateString" id="2" hidden />
                    <label for="2">
                        2 stars <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/88/2_stars.svg/1280px-2_stars.svg.png" />
                    </label>
                    <input type="radio" asp-for="RateString" class="rate" value="3" name="RateString" id="3" hidden />
                    <label for="3">
                        3 stars <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/ee/3.5_stars.svg/1280px-3_stars.svg.png" />
                    </label>
                    <input type="radio" asp-for="RateString" class="rate" value="4" name="RateString" id="4" hidden />
                    <label for="4">
                        4 stars <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1b/4_stars.svg/1200px-4_stars.svg.png" />
                    </label>
                    <input type="radio" asp-for="RateString" class="rate" value="5" name="RateString" id="5" hidden />
                    <label for="5">
                        5 stars <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ae/5_stars.svg/1280px-5_stars.svg.png" />
                    </label>

                    <span asp-validation-for="RateString" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
