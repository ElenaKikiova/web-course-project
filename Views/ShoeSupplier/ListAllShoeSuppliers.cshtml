@model ICollection<CourseProject.ViewModels.ShoeSuppliers.ShoeSupplierDetailViewModel>

@{
    ViewData["Title"] = "Suppliers";
}

<button class="btn btn-primary" onclick="location.href='@Url.Action("EditShoeSupplier")'">Create new </button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Supplier</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@Html.ActionLink(@item.SupplierName, "ShoeSupplierDetails", new { id = item.Id })</td>
                <td>
                    <div class="actions">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("EditShoeSupplier", "ShoeSupplier", new { id = item.Id })'">Edit</button>
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("DeleteShoeSupplier", "ShoeSupplier", new { id = item.Id })'">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>