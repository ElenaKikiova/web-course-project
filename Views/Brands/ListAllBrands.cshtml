@model ICollection<CourseProject.ViewModels.Brands.BrandDetailViewModel>

@{
    ViewData["Title"] = "Suppliers";
}

<button class="btn btn-primary" onclick="location.href='@Url.Action("Edit")'">Create new </button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Supplier</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.BrandName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { BrandId = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { BrandId =  item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { BrandId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>