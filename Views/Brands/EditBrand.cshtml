@model CourseProject.ViewModels.Brands.CreateEditBrandViewModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditShoeSupplier</title>
</head>
<body>

    <h4>CreateEditShoeSupplierViewModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditShoeSupplier">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <input asp-for="Id" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BrandName" class="control-label"></label>
                    <input asp-for="BrandName" class="form-control" />
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <label class="control-label">Assign shoe: </label>
                    </div>
                    @for (var i = 0; i < Model.Shoes.Count; i++)
                    {
                        <div>
                            <input type="hidden" asp-for="Shoes[i].Id" />
                            <input type="hidden" asp-for="Shoes[i].Name" />
                            <input type="hidden" asp-for="Shoes[i].Price" />
                            <input type="hidden" asp-for="Shoes[i].CategoryId" />
                            <input type="hidden" asp-for="Shoes[i].BrandId" />
                            <input type="hidden" asp-for="Shoes[i].ImageUrl" />
                            <input type="checkbox" asp-for="Shoes[i].IsSelected" />
                            <label asp-for="Shoes[i].Id">@Model.Shoes[i].Name</label>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class=" btn-pribtnmary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ListAllShoeSuppliers">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>