@model CourseProject.ViewModels.Shoes.ShoeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

@Html.ActionLink("Rate", "Rate", "Ratings", new { shoeId = Model.Id})

<div>
    <dl class="row">
        <div class="shoe">
            <img src=@Html.DisplayFor(model => model.ImageUrl) />
            <div class="details">
                <h4 class="title">@Html.DisplayFor(model => model.Name)</h4>
                <div class="brand">@Html.DisplayFor(model => model.BrandId)</div>
                <div class="category">@Html.DisplayFor(model => model.CategoryId)</div>
                <div class="price">@Html.DisplayFor(model => model.Price) BGN</div>
                <div class="rate">@Html.DisplayFor(model => model.Rating) %</div>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Cart", "Add", new { ShoeId = Model.Id })'">Add to cart</button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Edit", new { ShoeId = Model.Id })'">Edit</button>
            </div>
        </div>
    </dl>
</div>
<div>
</div>
